= form_for(@material) do |f|
  - if @material.errors.any?
    #error_explanation
      %h2
        = pluralize(@material.errors.count, "error")
        prohibited this material from being saved:
      %ul
        - @material.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
